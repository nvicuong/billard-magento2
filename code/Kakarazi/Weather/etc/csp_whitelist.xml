<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <!-- Cho phép tải ảnh từ openweathermap -->
        <policy id="img-src">
            <values>
                <value id="openweathermap" type="host">https://openweathermap.org</value>
            </values>
        </policy>
        <!-- Cho phép tải ảnh từ icons8 -->
        <policy id="img-src">
            <values>
                <value id="icons8" type="host">https://img.icons8.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
