#!/usr/bin/env bash
set -o errexit

MEM=$(docker info | grep "Total Memory" | cut -d':' -f2 | xargs | sed s/GiB//)
# Docker reports RAM 0.2 less than what it is actually set to
(( $(echo "$MEM < 5.7" | bc -l) )) && echo "There must be at least 6GB of RAM allocated to Docker to continue." && exit

export COMPOSE_HTTP_TIMEOUT=600

echo "Installing Magento 2, it will take few minutes..."

bin/docker-compose up -d --remove-orphans

bin/docker-compose exec phpfpm bin/magento indexer:reindex
bin/docker-compose exec phpfpm bin/magento cache:clean
bin/docker-compose exec phpfpm bin/magento cache:flush

echo "Magento 2 has been installed and is now available at http://localhost:80"